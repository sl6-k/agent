.flexCenter {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

/**image**/

.images {
  display: block;
  width: 100%;
  height: 100%;
}

page {
  width: 100%;
  height: 100%;
  background: #f2f2f2;
}

.container {
  width: 100%;
  height: 100%;
  color: #333;
  font-size: 14px;
  position: relative;
}

.textRight {
  text-align: right !important;
}

.textLeft {
  text-align: left !important;
}

.fontSize14 {
  font-size: 14px;
  color: #666;
}

/******list 右箭头*******/

.blockList {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 16px;
  border-bottom: 1px solid #eee;
  background: #fff;
  color: #333;
  font-size: 16px;
}

.blockList:active {
  background: #efefef;
}

.blockList .listIcon {
  width: 20px;
  height: 20px;
  overflow: hidden;
}

.blockList .listIcon image {
  width: 100%;
  height: 100%;
}

.blockList .listText {
  flex: 1;
  padding-left: 16px;
  font-size: 13px;
}

.blockList .listRightIcon {
  width: 12px;
  height: 12px;
  overflow: hidden;
}

.blockList .listRightIcon image {
  display: block;
  width: 100%;
  height: 100%;
}

.btnBox {
  padding: 30px 16px;
}

/**** list input输入****/

.listInputBox {
  padding: 10px 16px;
  font-size: 16px;
  border-bottom: 1px solid #ccc;
}

.listInputBox .listImage {
  flex: 1;
  text-align: right;
  overflow: hidden;
}

.listInputBox .listImage .photoBox {
  width: 24px;
  height: 24px;
  float: right;
  overflow: hidden;
}

.listInputBox .listImage .photoBox image {
  width: 100%;
  height: 100%;
}

.listInputBox .listInput {
  flex: 1;
  padding-left: 20px;
}

.listInputBox .listInput input {
  width: 100%;
  text-align: right;
  font-size: 14px;
  color: #666;
  line-height: 26px;
  height: 26px;
}

/* 去掉前后的横线 */

.weui_cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  border-top: 0px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.weui_cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  border-bottom: 0px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.none {
  min-width: 180px;
  color: #ccc;
  font-size: 14px;
  text-align: center;
  padding: 50px 0;
}

.none .icon {
  width: 120px;
  margin: 0 auto;
}

.none .icon image {
  display: block;
  width: 100%;
}
