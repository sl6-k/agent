/* 底部 */

.weui-footer {
  margin-top: 15px;
  margin-bottom: 15px;
}

.weui_btn:after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 0px solid rgba(0, 0, 0, 0.2);
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 10px;
}

button:after {
  border: none;
}

.weui-notice {
  height: 400px;
  position: relative;
  margin: 0;
  width: 100%;
  z-index: 99;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;
  -webkit-box-align: center;
  text-align: center;
}

.weui-notice-icon {
  margin-bottom: 20px;
  display: block;
  width: 120px;
  height: 120px;
}

.weui-notice-label {
  color: #999;
  display: block;
  font-family: "microsoft yahei";
  font-size: 28rpx;
  line-height: 42rpx;
}

.weui-notice-btn {
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 40px;
  padding-right: 40px;
  box-sizing: border-box;
  font-size: 14px;
  text-align: center;
  text-decoration: none;
  color: #ff5400;
  border: 1px solid #ff5400;
  line-height: 2;
  margin-top: 20px;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
}

