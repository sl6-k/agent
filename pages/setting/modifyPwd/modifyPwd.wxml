<!--修改密码-->
<view class='container'>
  <view class='pages'>
      <view class='all'>
        <text>原密码：</text>
        <input name="phone" placeholder='请输入原密码' type='password' style='color:#333' placeholder-style="color:#666" maxlength="11" bindinput='blurmodifyPwd'></input>
      </view>
      <view class='all'>
        <text>验证码:</text>
        <input name="phone" placeholder='请输入验证码' type='text' style='color:#333' placeholder-style="color:#666" maxlength="4" bindinput='getCode'></input>
        <text bindtap='getPhoneCode' style='font-size:12px;color:#ffb12a;text-align:right;'>{{codeText}}</text>
      </view>
      <view class='all'>
        <text>新密码：</text>
        <input name="phone" placeholder='请输入新密码' type='password' style='color:#333' placeholder-style="color:#666" maxlength="11" bindinput='blurNewPwd'></input>
      </view>
      <view class='all' style='border-bottom: 1rpx solid #efefef;'>
        <text>重复密码：</text>
        <input name="phone" placeholder='请再输入新密码' type='password' style='color:#333' placeholder-style="color:#666" maxlength="11" bindinput='blurRepeatPwd'></input>
      </view>
      <button formType="submit" bindtap='formSubmit'>保存</button>

  </view>
</view>