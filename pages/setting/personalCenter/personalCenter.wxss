/* pages/setting/userData/userData.wxss */

.pages .avatar {
  /* 用户头像 */
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #eee;
  border-radius: 50%;
}
.picker {
  color:#808080;
}
/* 按钮的点击事件背景 */

.weui_btn_primary:not(.weui_btn_disabled):active {
  color: #fff;
  background-color: #ffb12a;
}

.pages .avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

/* 不显示箭头 */

.weui_cells_access .weui_cell_ft-arrow:after {
  content: " ";
  display: inline-block;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #fff;
  border-style: solid;
  position: relative;
  top: -2px;
  top: -1px;
  margin-left: 0.3em;
}

.pages .weui_cells {
  margin-top: 0;
}

/* input样式调整 */

.weui-input {
  text-align: right;
}

.font-color {
  color: #808080;
  font-size: 13px;
}

/* 按钮颜色 */

.weui_btn_primary {
  background: #ffb12a;
  border-radius: 25px;
}

/* 列表的分割线 */

.dividingLine:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  border-top: 1px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.dividingLine:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  border-bottom: 0px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
