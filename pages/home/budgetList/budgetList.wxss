/* pages/home/budgetList/budgetList.wxss */

/* 收支明细 */
page{
  background: white
}
.container {
  /* background: #fff; */
  border-top: 1px solid #fafafa;
  height: auto;
}

.container .budget {
  padding-top: 40px;
}

.container .budget .budgetInfo {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  border-bottom: 1px solid #fafafa;
  background-color: white;
}

.container .budget .budgetInfo .money {
  text-align: center;
}

.loadingMsg {
  text-align: center;
  font-size: 14px;
  color: #ccc;
  padding: 20px 0;
}

.selectBox {
  position: fixed;
  left: 0px;
  right: 0px;
  height: 40px;
  align-items: center;
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
}

.selectBox .selectList {
  display: flex;
  width: 49%;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  border-right: 1px solid #eee;
}

.selectBox .selectList:last-child {
  border: none;
}

.selectBox .selectList .icon {
  width: 10px;
  height: 10px;
  margin-left: 8px;
}

.selectBox .selectList .icon image {
  width: 100%;
  height: 100%;
  display: block;
}
