/* pages/home/cashNotice/cashNotice.wxss */
page{
  background: white
}
.container {
  /* background: #fff; */
  border-top: 1px solid #fafafa;
  color:#757575;
  height: auto;
}

.container .flex {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.container .flex view:last-child{
  text-align: center;
}

.container .flex .text-color{
  color:#5bb955;
}

.container .border{
  border-bottom:1px solid #fafafa;
}


/* 小红点 */

.dot {
  width: 5px;
  background: red;
  height: 5px;
  border-radius: 50%;
  position: absolute;
  top: 15px;
  left: 70px;
}
.cashStatus,.cashDate{
  display: inline-block;
  margin-bottom: 10px;
}
.cashStatus{
  font-size: 16px;
  width: 40%;
  text-align: left;
}
.cashDate{
  font-size: 14px;
  width: 60%;
  text-align: right;
}
.cashDetail{
  font-size: 12px;
  line-height: 20px;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.infoText{
  display: inline-block;
  width: 100%;
  text-align: center;
  line-height: 30px;
}